<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/primaryColor</item>
        <item name="android:itemBackground">@color/primaryColor</item>
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorSecondary" tools:targetApi="n_mr1">@color/primaryLightColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dark Mode Current theme. -->
    <style name="DarkMode" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/primaryColor</item>
        <item name="android:itemBackground">@color/primaryColor</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorSecondary" tools:targetApi="n_mr1">@color/primaryLightColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Specific Widgets -->
        <item name="android:buttonStyle">@style/DarkModeButtonStyle</item>
        <item name="editTextStyle">@style/DarkModeEditTextStyle</item>
        <item name="android:radioButtonStyle">@style/DarkModeRadioButtonStyle</item>
    </style>


    <!-- Light Mode Current theme. -->
    <style name="LightMode" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/secondaryColor</item>
        <item name="android:itemBackground">@color/secondaryColor</item>
        <item name="colorPrimary">@color/secondaryColor</item>
        <item name="colorPrimaryDark">@color/secondaryDarkColor</item>
        <item name="android:colorSecondary" tools:targetApi="n_mr1">@color/secondaryLightColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Specific Widget Styles -->

    <!-- Dark Mode Button Style. -->
    <style name="DarkModeButtonStyle" parent="@android:style/Widget.Material.Light.Button">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:backgroundTint">@color/secondaryColor</item>
    </style>

    <!-- Dark Mode Edit Text Style. -->
    <style name="DarkModeEditTextStyle" parent="@android:style/Widget.Material.Light.EditText">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/primaryHintColor</item>
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>

    <!-- Dark Mode Radio Button Style. -->
    <style name="DarkModeRadioButtonStyle" parent="@android:style/Widget.Material.Light.CompoundButton.RadioButton">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:buttonTint">@color/secondaryColor</item>
    </style>


    <!-- Spooky Orange theme. -->
    <style name="SpookyOrangeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/spookyPrimaryColor</item>
        <item name="colorPrimaryDark">@color/spookyPrimaryDarkColor</item>
        <item name="colorAccent">@color/spookySecondaryColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Bashful Blue theme. -->
    <style name="BashfulBlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bluePrimaryColor</item>
        <item name="colorPrimaryDark">@color/bluePrimaryDarkColor</item>
        <item name="colorAccent">@color/blueSecondaryColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
