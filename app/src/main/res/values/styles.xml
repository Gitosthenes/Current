<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="android:colorSecondary" tools:targetApi="n_mr1">@color/primaryLightColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Spooky Orange theme. -->
    <style name="SpookyOrangeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/spookyPrimaryColor</item>
        <item name="colorPrimaryDark">@color/spookyPrimaryDarkColor</item>
        <item name="colorAccent">@color/spookySecondaryColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Bashful Blue theme. -->
    <style name="BashfulBlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bluePrimaryColor</item>
        <item name="colorPrimaryDark">@color/bluePrimaryDarkColor</item>
        <item name="colorAccent">@color/blueSecondaryColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Husky Pride theme. -->
    <style name="HuskyPrideTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/huskyPrimaryColor</item>
        <item name="colorPrimaryDark">@color/huskyPrimaryDarkColor</item>
        <item name="colorAccent">@color/huskySecondaryColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
