            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_weather_currentLocation"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tv_weather_currentLocation"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_weather_currentCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tv_weather_currentCity"
                android:textAlignment="viewStart"
                android:textColor="@android:color/black"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tv_weather_currentState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tv_weather_currentState"
                android:textColor="@android:color/black"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_weather_search"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

