                android:id="@+id/et_weather_searchByZip"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/et_weather_searchByZip"
                android:inputType="textPersonName"
                android:text="@string/et_weather_searchByZip"
                android:textColor="@android:color/darker_gray"
                android:autofillHints="" tools:targetApi="o" />

            <Button
                android:id="@+id/btn_weather_search"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_weather_search" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_weather_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

